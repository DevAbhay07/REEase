{
  "manifest_version": 3,
  "name": "AI Document Summarizer",
  "version": "1.0",
  "description": "Summarize documents and text using Google Gemini AI",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Document Summarizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}